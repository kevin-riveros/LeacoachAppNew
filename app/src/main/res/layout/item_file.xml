<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemMedia"
    android:background="@color/colorIcons"
    android:outlineSpotShadowColor="#000000"
    android:layout_width="match_parent"
    android:layout_height="85dp">



        <android.support.v7.widget.CardView
            android:id="@+id/iconCardView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/colorIcons"
            android:layout_marginStart="5dp"
            app:cardCornerRadius="35dp"
            app:cardElevation="6dp"
            android:shape="ring"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/iconImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:src="@drawable/ic_docflat"
            />
        </android.support.v7.widget.CardView>



        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Funciones y calculo algebraico"
            android:textSize="16dp"
            android:textStyle="normal"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@id/iconCardView"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/courseTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Matematica, Calculo"
            android:textColor="#000000"
            android:textSize="12dp"

            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@id/iconCardView"
            app:layout_constraintTop_toBottomOf="@id/titleTextView" />
        <TextView
            android:id="@+id/tutorNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Jorge Perez"
            android:textSize="16dp"
            android:textColor="#000000"
            android:layout_marginBottom="@dimen/default_margin"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@id/iconCardView"
            app:layout_constraintTop_toBottomOf="@id/courseTextView" />



        <ImageView
            android:id="@+id/iconHeartImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:src="@drawable/ic_star_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

        />
        <TextView
            android:id="@+id/numberOfViewTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4329 "
            android:textSize="16dp"
            android:textColor="#000000"
            android:layout_marginBottom="@dimen/default_margin"
            android:textStyle="normal"
            app:layout_constraintEnd_toStartOf="@id/iconHeartImageView"
            app:layout_constraintBottom_toBottomOf="parent"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="parent"

            ></View>

</android.support.constraint.ConstraintLayout>